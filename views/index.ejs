<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Movies | MovieVerse</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(135deg, #0a0a0a, #1a1a1a);
      color: #fff;
      font-family: 'Poppins', sans-serif;
      min-height: 100vh;
    }

    /* Navbar */
    .navbar {
      background: rgba(0, 0, 0, 0.85);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid rgba(255, 70, 70, 0.3);
    }

    .navbar-brand {
      font-weight: 700;
      font-size: 1.6rem;
      color: #ff4646 !important;
      text-shadow: 0 0 8px rgba(255, 70, 70, 0.7);
    }

    /* Add Movie Button (Navbar) */
    .btn-outline-light {
      border-color: #ff4646;
      color: #ff4646;
      font-weight: 500;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .btn-outline-light::before {
      content: "";
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, rgba(255,70,70,0.4), rgba(255,120,70,0.8));
      transition: all 0.4s ease;
      z-index: 0;
    }

    .btn-outline-light:hover::before {
      left: 0;
    }

    .btn-outline-light span {
      position: relative;
      z-index: 1;
    }

    .btn-outline-light:hover {
      border-color: #ff4646;
      color: #fff;
      box-shadow: 0 0 15px #ff4646;
    }

    h2 {
      color: #ff4646;
      font-weight: 600;
      letter-spacing: 1px;
      border-bottom: 2px solid #ff4646;
      display: inline-block;
      padding-bottom: 5px;
    }

    /* Movie Table */
    .movie-table {
      background: rgba(25, 25, 25, 0.95);
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 0 20px rgba(255, 70, 70, 0.2);
    }

    .table thead {
      background-color: #ff4646;
      color: white;
      font-size: 1rem;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .table tbody tr {
      transition: all 0.3s ease;
    }

    .table tbody tr:hover {
      background-color: rgba(255, 70, 70, 0.1);
      transform: scale(1.01);
    }

    .table td {
      vertical-align: middle;
    }

    img {
      border-radius: 10px;
      transition: transform 0.3s ease;
    }

    img:hover {
      transform: scale(1.05);
    }

    /* Fancy Buttons */
    .btn-edit {
      background: linear-gradient(45deg, #ffb347, #ffcc33);
      border: none;
      color: #111;
      font-weight: 600;
      border-radius: 8px;
      transition: all 0.3s ease;
      box-shadow: 0 0 8px rgba(255, 180, 50, 0.5);
    }

    .btn-edit:hover {
      background: linear-gradient(45deg, #ffcc33, #ffb347);
      box-shadow: 0 0 15px rgba(255, 200, 80, 0.8);
      transform: translateY(-2px);
    }

    .btn-delete {
      background: linear-gradient(45deg, #ff4646, #ff6b6b);
      border: none;
      color: #fff;
      font-weight: 600;
      border-radius: 8px;
      transition: all 0.3s ease;
      box-shadow: 0 0 8px rgba(255, 70, 70, 0.4);
    }

    .btn-delete:hover {
      background: linear-gradient(45deg, #ff6b6b, #ff4646);
      box-shadow: 0 0 15px rgba(255, 70, 70, 0.8);
      transform: translateY(-2px);
    }

    /* "Add Movie" Call-to-Action inside table */
    .btn-add-movie {
      background: linear-gradient(45deg, #ff4646, #ff6b6b);
      color: #fff;
      border: none;
      padding: 10px 20px;
      font-weight: 600;
      border-radius: 10px;
      transition: all 0.3s ease;
    }

    .btn-add-movie:hover {
      background: linear-gradient(45deg, #ff6b6b, #ff4646);
      box-shadow: 0 0 15px #ff4646;
      transform: scale(1.05);
    }

    footer {
      text-align: center;
      color: #999;
      padding: 1rem;
      border-top: 1px solid #333;
      margin-top: 50px;
    }
  </style>
</head>

<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/movie/get">MovieVerse</a>
      <div>
        <a href="/movie/add" class="btn btn-outline-light btn-sm"><span> Add Movie</span></a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mt-5">
    <div class="text-center mb-4">
      <h2>All Movies</h2>
    </div>

    <div class="card movie-table p-3">
      <table class="table table-dark table-hover align-middle text-center mb-0">
        <thead>
          <tr>
            <th>Poster</th>
            <th>Title</th>
            <th>Genre</th>
            <th>Year</th>
            <th>Rating</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% if (movies && movies.length > 0) { %>
            <% movies.forEach(movie => { %>
              <tr>
                <td>
                  <% if (movie.image) { %>
                    <img src="/uploads/<%= movie.image %>" width="80" height="100" class="shadow-sm">
                  <% } else { %>
                    <span class="text-muted">No Image</span>
                  <% } %>
                </td>
                <td class="fw-semibold"><%= movie.title %></td>
                <td><%= movie.genere %></td>
                <td><%= movie.year %></td>
                <td><span class="badge bg-danger fs-6"><%= movie.rating %>⭐</span></td>
                <td>
                  <a href="/movie/edit/<%= movie._id %>" class="btn btn-sm btn-edit me-2"> Edit</a>
                  <a href="/movie/delete/<%= movie._id %>" class="btn btn-sm btn-delete">Delete</a>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="6" class="text-center text-muted py-4">
                No movies available yet <br>
                <a href="/movie/add" class="btn btn-add-movie mt-3"> Add Your First Movie</a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <footer>
    <p>© <%= new Date().getFullYear() %> MovieVerse. Designed for Cinematic Creators </p>
  </footer>

</body>
</html>
